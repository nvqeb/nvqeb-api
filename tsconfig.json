{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "target": "ES2017",
        "strictNullChecks": true,
        "skipLibCheck": true,
        "module": "commonjs",
        "jsx": "react",
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/*/*.ts",
        "src/*/*/*.ts",
        "src/*/*/*/*.ts",
        "src/*/*/*/*/*.ts",
        "src/*/*/*/*/*/*.ts",
        "src/*.tsx",
        "src/**/*.tsx",
        "src/*/*.tsx",
        "src/*/*/*.tsx",
        "src/*/*/*/*.tsx",
        "src/*/*/*/*/*.tsx",
        "src/*/*/*/*/*/*.tsx",
    ],
    "exclude": []
}
